public class ListaController<T>
{
    private ListaDoblementeEnlazada<T> _lista;
    private /* Tipo de la Vista */ _vista; // Necesitaremos una referencia a la vista

    public ListaController(/* Instancia de la Vista */ vista)
    {
        _lista = new ListaDoblementeEnlazada<T>();
        _vista = vista;
        // Suscribir eventos de la vista a los métodos del controlador
    }

    // Métodos para manejar las acciones de la vista (ej. Agregar elemento)
    public void AgregarAlInicio(T valor)
    {
        _lista.AgregarAlInicio(valor);
        _vista.ActualizarLista(_lista); // Método en la vista para actualizar la visualización
    }

    // Otros métodos para las demás operaciones
}